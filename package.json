{
  "name": "stedi-bootstrap",
  "version": "1.0.0",
  "description": "One-click deploy X12 EDI system on Stedi",
  "type": "module",
  "scripts": {
    "bootstrap": "npm run create-profiles && npm run configure-buckets && npm run configure-resources && npm run deploy && npm run enable-notifications",
    "deploy": "ts-node-esm ./src/setup/deploy.ts",
    "configure-buckets": "ts-node-esm ./src/setup/configureBuckets.ts",
    "batch-upload-files": "ts-node-esm ./src/scripts/batchUploadFiles.ts",
    "create-profiles": "ts-node-esm ./src/setup/createProfiles.ts",
    "configure-resources": "ts-node-esm ./src/setup/configureResources.ts",
    "enable-notifications": "ts-node-esm ./src/setup/enableBucketNotifications.ts",
    "test": "ava"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@stedi/sdk-client-buckets": "^0.0.21",
    "@stedi/sdk-client-edi-translate": "^0.0.40",
    "@stedi/sdk-client-functions": "^0.0.21",
    "@stedi/sdk-client-guides": "^0.0.40",
    "@stedi/sdk-client-mappings": "^0.0.40",
    "@stedi/sdk-client-partners": "^0.0.45",
    "@stedi/sdk-client-sftp": "^0.0.40",
    "@stedi/sdk-client-stash": "^0.0.40",
    "@types/node": "^18.11.15",
    "@types/node-fetch": "^2.6.2",
    "@types/object-hash": "^3.0.1",
    "ava": "^5.1.0",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "esbuild": "^0.16.7",
    "jszip": "^3.10.1",
    "node-fetch": "^3.3.0",
    "object-hash": "^3.0.0",
    "serialize-error": "^11.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "zod": "^3.20.2"
  },
  "prettier": {
    "useTabs": false
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": "tsc"
    }
  }
}
